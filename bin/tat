#!/bin/sh
#
# Attach or create tmux session.

path_name="$(basename "$PWD" | tr . -)"
if [ "$PWD" = "$HOME" ]; then
  session_name=${1-"home"}
else
  session_name=${1-$path_name}
fi

not_in_tmux() {
  [ -z "$TMUX" ]
}

session_exists() {
  tmux has-session -t "=$session_name" 2>/dev/null
}

create_detached_session() {
  (TMUX='' tmux new-session -Ad -s "$session_name" -c "$PWD")
}

setup_dev_environment() {
  tmux send-keys -t "$session_name:1" 'nvim' Enter
  tmux split-window -h -l 15% -t "$session_name:1" -c "$PWD"
  sleep 0.1
  tmux send-keys -t "$session_name:1.right" 'claude' Enter
  tmux select-pane -t "$session_name:1.0"
}

create_dev_session() {
  session_already_exists=false
  
  if session_exists; then
    session_already_exists=true
  fi
  
  if not_in_tmux; then
    if [ "$session_already_exists" = true ]; then
      tmux attach-session -t "$session_name"
    else
      tmux new-session -d -s "$session_name" -c "$PWD"
      setup_dev_environment
      tmux attach-session -t "$session_name"
    fi
  else
    if [ "$session_already_exists" = true ]; then
      tmux switch-client -t "=$session_name"
    else
      create_detached_session
      setup_dev_environment
      tmux switch-client -t "=$session_name"
    fi
  fi
}

create_if_needed_and_attach() {
  if not_in_tmux; then
    tmux new-session -As "$session_name" -c "$PWD"
  else
    if session_exists; then
      tmux switch-client -t "=$session_name"
    else
      create_detached_session
      tmux switch-client -t "=$session_name"
    fi
  fi
}

if [ $# -gt 0 ]; then
  # Argument provided
  case "$1" in
    "dev")
      # For dev mode, always use folder name as session name
      session_name="$path_name"
      if session_exists; then
        # Session exists, just use it
        if not_in_tmux; then
          tmux attach-session -t "$session_name"
        else
          tmux switch-client -t "=$session_name"
        fi
      else
        create_dev_session
      fi
      ;;
    *)
      # For other arguments, use the argument as session name
      if session_exists; then
        # Session exists, just use it
        if not_in_tmux; then
          tmux attach-session -t "$session_name"
        else
          tmux switch-client -t "=$session_name"
        fi
      else
        # Default behavior for other arguments
        create_if_needed_and_attach
      fi
      ;;
  esac
else
  # No argument provided
  create_if_needed_and_attach
fi
