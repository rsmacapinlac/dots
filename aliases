# Unix
alias ll="ls -al"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias r="ranger"
alias brain="cd '$HOME/Second Brain/' && nvim"


# pomodoro app
alias p="pomodux"

# Ritchie's stuff :)

# Change wallpaper
alias w="$HOME/.config/wallpapers/bin/set_wallpaper"

# Habit change
alias v="echo \"Use 'e'\"! Gawd!"

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Development stuff
alias be='bundle exec'

# Go development aliases
alias gob='go build'
alias gor='go run'
