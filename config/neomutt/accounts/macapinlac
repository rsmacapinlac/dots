# vim: filetype=muttrc
unmailboxes *

# Google Workspace IMAP settings for macapinlac.com
set realname = "Ritchie Macapinlac"
set from = "ritchie@macapinlac.com"
set folder = "imaps://ritchie@macapinlac.com@imap.gmail.com:993"
set imap_pass = "`pass email/macapinlac.com`"
set spoolfile = "+INBOX"

# SMTP configuration using msmtp
set sendmail = "/usr/bin/msmtp -a macapinlac"

# Gmail-specific folders
set record = "+[Gmail]/Sent Mail"
set trash = "+[Gmail]/Trash"
